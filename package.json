{
  "name": "trulioo-react",
  "author": "Menelaos Kotsollaris",
  "description": "React components for integrating with the Trulioo GlobalGateway API https://www.trulioo.com/",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "homepage": "https://www.trulioo.com",
  "repository": "github:trulioo/trulioo-react",
  "bugs": {
    "url": "https://github.com/Trulioo/trulioo-react/issues"
  },
  "keywords": [
    "trulioo",
    "identity",
    "verification",
    "kyc"
  ],
  "dependencies": {
    "@emotion/core": "^10.0.6",
    "axios": "^0.19.0",
    "country-list": "^2.1.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react-jsonschema-form": "^1.0.6",
    "react-redux": "^7.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.6.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "@testing-library/dom": "^6.6.0",
    "@testing-library/react": "^9.3.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^25.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-minify": "^0.5.1",
    "coveralls": "^3.0.6",
    "css-loader": "^3.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "doctoc": "^1.4.0",
    "emotion": "^10.0.6",
    "eslint": "^6.5.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.9",
    "jest": "^25.0.0",
    "lint-staged": "^10.0.0-0",
    "prettier-eslint": "^9.0.0",
    "react": "^16.10",
    "react-dom": "^16.10",
    "react-test-renderer": "^16.7.0",
    "redux-mock-store": "^1.5.3",
    "semantic-release": "^15.13.24",
    "style-loader": "^3.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "peerDependencies": {
    "react": "^16.10",
    "react-dom": "^16.10"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "test": "jest",
    "transpile": "babel src -d ./dist --ignore **/tests/",
    "remove-transpiled": "rm -rf ./dist",
    "prepare": "npm run transpile",
    "lint": "npm run lint:ts",
    "lint:css": "stylelint --fix \"./src/**/*.{js,ts,tsx}\"",
    "lint:ts": "eslint --fix \"./src/**/*.{js,ts,tsx}\"",
    "preversion": "npm test -- src/tests/snapshot src/tests/unit",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "doctoc-styling": "doctoc STYLING.md",
    "semantic-release": "semantic-release"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "jsdom"
 }
}